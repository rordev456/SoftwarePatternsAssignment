<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>
<br>
<table class="table table-hover thead-inverse"  border="3">
  <thead>
    <tr>
      <th>Paymethod</th>
      <th>Total</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.paymethod %></td>
        <td><%= order.total %></td>
        <td><%= order.customer_id %></td>
        <td><%= link_to 'Show', order, class: "btn btn-md btn-success" %></td>
        <td><%= link_to 'Edit', edit_order_path(order), class: "btn btn-md btn-warning" %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-md btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
