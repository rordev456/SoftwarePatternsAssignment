<!--hide alerts-->
<script>
$(document).ready(function(){
  $('div.alert').delay(2000).fadeOut(1000);
});
</script>
<div class="alert alert-success"><b>Enjoy Recaping your Orders</b></div>
<div class="container">
<h1>Listing Orders</h1>
<br>
<table class="table table-hover table-bordered thead-inverse"  border="1">
  <thead>
    <tr>
      <th>Paymethod</th>
      <th>Total</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%=order.paymethod %></td>
        <td><%= euro order.total%></td>
        <td><%=order.customer_id %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-md btn-danger btn-block" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
