<!--hide alerts-->
<script>
$(document).ready(function(){
  $('div.alert').delay(2000).fadeOut(1000);
});
</script>

<p id="notice"><%= notice %></p>

<h1>Listing Lineitems</h1>

<table class="table table-hover table-bordered thead-inverse"  border="3">
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Product</th>
      <th>Cart</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <!--Iterator Pattern-->
    <% @lineitems.each do |lineitem| %>
      <tr>
        <td><%= lineitem.quantity %></td>
        <td><%= lineitem.product_id %></td>
        <td><%= lineitem.cart_id %></td>
        <td><%= lineitem.order_id %></td>
        <td><%= link_to 'Destroy', lineitem, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-md btn-danger btn-block"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
